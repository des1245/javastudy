package quiz09;

public class soldier {
	
	//field
	private String name;
	private Gun[] guns;
	private int idx;
	
	//constructor
	public soldier(String name,int gunCount) {
		this.name =name;
		this.guns =guns[gunCount]; 
	}
	
	//method
	public void addGun(Gun gun) {
		if(idx<guns.length) { //현재총알에 적은 계수
			guns[idx++]=gun;
		}else {
			System.out.println("더 이상 총을 추가할 수 없습니다.");
		}
	}
	public void shoot() {
		for(int i=0; i<idx; i++) {
			guns[i].shoot();
		}
	}
	public void shoot(int gunNo) { //건에 총알 하나씩 빼온것
		guns[gunNo-1].shoot(); 
		guns[i].getClass();
	}
	public void shoot(String model) {
		for(int i=0; i<idx; i++) {
			if() {
			guns[i].getClass();
			}
		}
	}
}
