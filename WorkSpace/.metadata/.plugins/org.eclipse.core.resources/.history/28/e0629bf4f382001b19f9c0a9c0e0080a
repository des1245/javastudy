package quiz04;

public class Gun {
	
	//field
	private String model;
	private int bullet;
	private final int FULL_BULLET=6;
	
	//construct(생성자)
	public Gun(String model,int bullet) { //Gun gun =new Gun("K2",2); 인수 전달
		this.model =model; //모델 K2
		this.bullet =bullet; //2발
	}
	
	//method 총알 먼저 쏘겠습니다.
	public void shoot() {
	if(bullet >0) {
		bullet--; //총알 하나써요. 그러면 나중감소시킨다.
		System.out.println("빵야!"+bullet+"발 남았다.");
	}
	}
}
