package ex01_array;

public class Ex02_advanced_for {

	public static void main(String[] args) {
		
		//advanced-for : 항상 for문
		//배열의 순회를 인덱스 없이 처리하는 for문 입니다.
		
		int[] arr = {10,20,30};
		
		for(int n:arr) { 
			/*
			기억은 꼭 해주기
			동작이 자동화 되어있어서 이해만 하면 된다. 
			arr배열의 모든 요소를 변수 n으로 하나씩 전달하는 방식입니다.
			배열 변수선언 초기화10에서 for문 arr전달되어 n으로 전달되고 20도 마찬가지 30도 그렇다.
			*/
			System.out.println(n);
		}
		/*
		모든 배열의 요소를 1증가시키고 싶습니다.
		arr[0]++,arr[1]++,arr[2]++
		
		for(int n: arr) {
			n++;
			System.out.println(n);
		}
		*/
		for(int n=0;n<arr.length; n++) {
			arr[n]++;
			System.out.println(arr[n]);
		}
		//advanced-for문은 배열의 요소를 수정할 수는 없습니다.
		//인덱스를 활용하는 일반 for문이 배열의 요소를 수정시킬수 있기 때문이다.
	}

}
