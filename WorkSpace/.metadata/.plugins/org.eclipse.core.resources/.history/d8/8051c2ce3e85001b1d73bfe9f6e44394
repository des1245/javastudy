package quiz09;

import quiz04.Soldier;

public class MainClass {

	public static void main(String[] args) {
		//군인 만들기
		Soldier soldier = new Soldier("람보",3);//람보는 총 최대3개를 가질수 없다.
		soldier.addGun(new Gun("콜트",6));//콜트에 6발
		soldier.addGun(new Gun("베레타",6));
		soldier.addGun(new Gun("스미스웨슨",6));
		
		soldier.shoot(); //모든 총을 한 발씩 쏜다.
		soldier.shoot(1);//1번 총을 한 발 쏜다.(콜트) 같은변수인데 오버로딩이 된다.
		soldier.shoot("베레타"); //베레타를 한 발 쏜다.
		
		soldier.info();//람보의 정보 출력
		//이름: 람보
		//콜트(4발)
		//베레타(4발)
		//스미스웨슨(5발)
		soldier.reload(6); //끝나면 모든 총에 6발을 추가한다.
		soldier.reload(1,6); // 1번총에 6발넣는다.
		soldier.reload("베레타",6);//베레타에 6발 넣기
		
		soldier.info();
		
	}
}
